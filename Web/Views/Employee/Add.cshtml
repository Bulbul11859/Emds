@model Service.ViewModels.EmployeeViewModels.AddEmployeeViewModel
@{
    ViewData["Title"] = "Employees~Add";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Employee Add</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Employee">Home</a></li>
                    <li class="breadcrumb-item active">Add</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">

    <div class="row">
        <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Add</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Add">
                        <div class="row">
                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="inputName">First Name</label>
                                    <input type="text" id="inputName" class="form-control" asp-for="FirstName">
                                </div>
                            </div>
                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="inputName">Last Name</label>
                                    <input type="text" id="inputName" class="form-control" asp-for="LastName">
                                </div>
                            </div>
                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="inputName">Date Of Birth</label>
                                    <input type="date" id="inputName" class="form-control" asp-for="DateOfBirth">
                                </div>
                            </div>
                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="inputName">Email</label>
                                    <input type="email" id="inputName" class="form-control" asp-for="Email">
                                </div>
                            </div>
                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="inputName">Phone Number</label>
                                    <input type="text" id="inputName" class="form-control" asp-for="PhoneNumber">
                                </div>
                            </div>
                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="inputName">EmploymentDate</label>
                                    <input type="date" id="inputName" class="form-control" asp-for="EmploymentDate">
                                </div>
                            </div>
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <label for="inputDescription">Address</label>
                                    <textarea id="inputDescription" class="form-control" rows="4" asp-for="Address"></textarea>
                                </div>
                            </div>
                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="inputStatus">Department</label>
                                    <select id="inputStatus" class="form-control custom-select" asp-for="DepartmentId">
                                        <option selected="" disabled="">Department Name</option>
                                        @foreach (var department in ViewBag.DepartmentList)
                                        {
                                            <option value=@department.Id>@department.DepartmentName</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="inputName">Job Tittle</label>
                                    <input type="text" id="inputName" class="form-control" asp-for="JobTitle">
                                </div>
                            </div>
                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="inputName">Salary</label>
                                    <input type="number" step="any" id="inputName" class="form-control" asp-for="Salary">
                                </div>
                            </div>
                            <div class="col-12">
                                <a href="/Employee" class="btn btn-outline-primary">Cancel</a>
                                <input type="submit" value="Save" class="btn btn-success float-right">
                            </div>
                        </div>

                    </form>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>

