@model Service.ViewModels.JobHistoryViewModels.AddJobHistoryViewModel
@{
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Add Job History Of Employee</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/JobHistory">Home</a></li>
                    <li class="breadcrumb-item active">Add</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Add</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Add">
                        <div class="row">
                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12">
                              
                                <div class="form-group">
                                    <label for="inputStatus">Employee List</label>
                                    <select id="inputStatus" class="form-control custom-select" asp-for="EmployeeId">
                                        <option selected="" disabled="">Select An Employee</option>
                                        @foreach (var employee in ViewBag.EmployeeList)
                                        {
                                            <option value=@employee.Id>@employee.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="inputName">Job Title</label>
                                    <input type="text" id="inputName" class="form-control" asp-for="JobTitle">
                                </div>
                            </div>
                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="inputName">Department Name</label>
                                    <input type="text" id="inputName" class="form-control" asp-for="Department">
                                </div>
                            </div>
                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="inputName">Company Name</label>
                                    <input type="text" id="inputName" class="form-control" asp-for="CompanyName">
                                </div>
                            </div>
                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="inputName">Start Date</label>
                                    <input type="date" step="any" id="inputName" class="form-control" asp-for="StartDate">
                                </div>
                            </div>
                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="inputName">End Date</label>
                                    <input type="date" step="any" id="inputName" class="form-control" asp-for="EndDate">
                                </div>
                            </div>
                          
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <label for="inputDescription">Responsibilities</label>
                                    <textarea id="inputDescription" class="form-control" rows="4" asp-for="Responsibilities"></textarea>
                                </div>
                            </div>
                            <div class="col-12">
                                <a href="/JobHistory/add" class="btn btn-outline-primary">Cancel</a>
                                <input type="submit" value="Submit Here" class="btn btn-success float-right">
                            </div>
                        </div>

                    </form>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>
