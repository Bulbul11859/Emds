@model List<Service.ViewModels.BenefitViewModels.BenefitListViewModel>
@{
    ViewData["Title"] = "Benefits";
}
<div class="content-header clearfix">
    <h1 class="float-left">
       Benefits
    </h1>
    <div class="float-right">
        <a class="btn btn-primary" href="/Benefit/Add">
            <i class="fas fa-plus-square"></i>
            Add new
        </a>
    </div>
</div>
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">List</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body p-2">
                        <table class="table table-striped  table-full-width" id="employee-table">
                            <thead>
                                <tr class="bg-primary text-white mx-2 text-center">
                                    <th>Action</th>
                                    <th>Employee</th>
                                    <th>Insurance</th>
                                    <th>Insurance Policy Number</th>
                                    <th>Retirement</th>
                                    <th>Vacation Days</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var benefit in Model)
                                {
                                    <tr>
                                        <td class="text-right py-0 align-middle">
                                            <div class="btn-group btn-group-sm">
                                                <a href="/Benefit/Edit/@benefit.BenefitsId" class="btn btn-info mr-2"><i class="far fa-edit"></i></a>
                                                <a href="/Benefit/SoftDelete/@benefit.BenefitsId" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                                            </div>
                                        </td>
                                        <td>@benefit.EmployeeFullName</td>
                                        <td>@benefit.HealthInsuranceProvider</td>
                                        <td>@benefit.HealthInsurancePolicyNumber</td>
                                        <td>@benefit.RetirementPlan</td>
                                        <td>@benefit.VacationDays</td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts
    {
    <script>
        $(function () {
            $('#employee-table').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": true,
                "responsive": true,
            });
        });
    </script>
}
