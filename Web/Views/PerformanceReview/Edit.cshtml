@model Service.ViewModels.PerformanceReviewViewModels.UpdatePerformanceReviewViewModels
@{
    ViewData["Title"] = "PerformanceReview~Edit";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Update Performance Review</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/PerformanceReview">Home</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Edit</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <form method="POST" asp-action="Update">
                        <div class="row">
                            <input type="hidden" asp-for="PerformanceReviewId" readonly>
                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="inputStatus">Review By</label>
                                    <select id="inputStatus" class="form-control custom-select" asp-for="ReviewerId">
                                        <option selected="" disabled="">Select An Employee</option>
                                        @foreach (var employee in ViewBag.EmployeeList)
                                        {
                                            <option value=@employee.Id>@employee.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="inputStatus">Review To</label>
                                    <select id="inputStatus" class="form-control custom-select" asp-for="EmployeeId">
                                        <option selected="" disabled="">Select An Employee</option>
                                        @foreach (var employee in ViewBag.EmployeeList)
                                        {
                                            <option value=@employee.Id>@employee.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="inputName">OverallRating</label>
                                    <input type="number" step="any" id="inputName" class="form-control" asp-for="OverallRating">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="inputDescription">Comments</label>
                                    <textarea id="inputDescription" class="form-control" rows="4" asp-for="Comments"></textarea>
                                </div>
                            </div>
                            <div class="col-12">
                                <a href="/PerformanceReview" class="btn btn-outline-primary">Cancel</a>
                                <input type="submit" value="Update" class="btn btn-success float-right">
                            </div>
                        </div>

                    </form>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>

